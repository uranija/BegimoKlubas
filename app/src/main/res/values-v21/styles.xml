<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/batai</item>

        <item name="android:navigationBarColor">@color/juodas</item>
        <item name="android:statusBarColor">@color/juodas</item>

    </style>


    <style name="myStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:fontFamily">Roboto</item>

    </style>

    <style name="myStyle2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/font_size2</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="myStyle3" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:layout_marginBottom">@dimen/layout_marginB</item>
        <item name="android:layout_marginLeft">@dimen/layout_marginL</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size2</item>
        <item name="android:textColorLink">@android:color/black</item>
        <item name="android:fontFamily">Roboto</item>
    </style>


    <style name="myStyle4" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:layout_marginBottom">@dimen/layout_marginB</item>
        <item name="android:layout_marginLeft">@dimen/layout_marginL</item>
        <item name="android:layout_marginTop">@dimen/layout_marginT</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/font_size2</item>
        <item name="android:textColorLink">@android:color/black</item>
        <item name="android:padding">@dimen/padding2</item>
    </style>


    <style name="myStyle5" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:layout_marginBottom">@dimen/layout_marginB2</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">@dimen/font_size2</item>
        <item name="android:textColorLink">@android:color/black</item>
        <item name="android:padding">@dimen/padding2</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="myStyle6" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/font_size2</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>